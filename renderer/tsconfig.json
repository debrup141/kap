{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["./utils/*"],
      "components/*": ["./components/*"],
      "containers/*": ["./containers/*"],
      "hooks/*": ["./hooks/*"],
      "common/*": ["./common/*"],
      "vectors": ["./vectors"]
    }
  },
  "exclude": [
    "node_modules",
    "common-remote-states"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
